<p id="notice"><%= notice %></p>

<h1>Benefits</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Title1</th>
      <th>Desc1</th>
      <th>Icon1</th>
      <th>Title2</th>
      <th>Desc2</th>
      <th>Icon2</th>
      <th>Title3</th>
      <th>Desc3</th>
      <th>Icon3</th>
      <th>Title4</th>
      <th>Desc4</th>
      <th>Icon4</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @benefits.each do |benefit| %>
      <tr>
        <td><%= benefit.description %></td>
        <td><%= benefit.title1 %></td>
        <td><%= benefit.desc1 %></td>
        <td><%= benefit.icon1 %></td>
        <td><%= benefit.title2 %></td>
        <td><%= benefit.desc2 %></td>
        <td><%= benefit.icon2 %></td>
        <td><%= benefit.title3 %></td>
        <td><%= benefit.desc3 %></td>
        <td><%= benefit.icon3 %></td>
        <td><%= benefit.title4 %></td>
        <td><%= benefit.desc4 %></td>
        <td><%= benefit.icon4 %></td>
        <td><%= link_to 'Show', benefit %></td>
        <td><%= link_to 'Edit', edit_benefit_path(benefit) %></td>
        <td><%= link_to 'Destroy', benefit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

