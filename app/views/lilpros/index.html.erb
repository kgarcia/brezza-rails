<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2 class="text-dark-blue"><strong>Presentación de productos</strong></h2>
      <ol class="breadcrumb">
        <li>
          <a href="<%= url_for :controller => 'home', :action => 'inicio' %>">Inicio</a>
        </li>
        <li class="active">
            <strong class="text-blue">Listado</strong>
        </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content">
   <div class="row">
      <div class="col-sm-12">
         <div class="ibox float-e-margins">
            <div class="ibox-title">
               <h4 class="text-dark-blue">
                  <strong>Listado: Presentación de productos</strong>
               </h4>
            </div>
            <div class="ibox-content">
               <%= link_to "Editar", edit_lilpro_path(@lilpro), :class => "btn btn-primary btn-sm", style: 'position: absolute; z-index: 9999; margin-top: -30px;'%>
               <div class="ibox float-e-margins">
                 <h2 align="center"><%= @lilpro.title %></h2>
                 <p align="center"><%= @lilpro.description %></p>
                 <p align="center"><%= @lilpro.image %></p>
                 <p align="center"><%= image_tag @lilpro.image.url(:medium), :class => "img-responsive" %></p>
                 
               </div> 
               
            </div>
         </div>
      </div>
   </div>
</div>