<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Contacts</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/panel>">Home</a>
        </li>
        <li>
            App Views
        </li>
        <li class="active">
            <strong>Usuarios</strong>
        </li>
    </ol>
</div>
        </div>
<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
     <% @users.each do |user| %>
    <div class="col-lg-4">
       
        <div class="contact-box">
            <%= link_to profile_show_path(:id=> user ) do %>
            
            <div class="col-sm-4">
                <div class="text-center">
                    <%= image_tag user.avatar.url, :alt=>"profile", :class => "img-circle m-t-xs img-responsive" %>
                    
                    <div class="m-t-xs font-bold">Alianza:                
                    <% if !Alliance.where(:user_id => user.id, :allytype => 1 ).take.nil? %>
                        TÃ©cnica
                    <% end %>
                    <% if !Alliance.where(:user_id => user.id, :allytype => 2 ).take.nil? %>
                        Financiera
                    <% end %>
                    <% if !Alliance.where(:user_id => user.id, :allytype => 3 ).take.nil? %>
                        Comercial
                    <% end %>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                
                <p><i class="fa fa-map-marker"></i> <%= user.country %></p>
                <address>
                    <strong>Otros datos:</strong><br>
                    
                    <%= @users.phone %><br>
                    <%= @users.email %><br>
                    <abbr title="Curriculum Vitae">CV:</abbr><% if !user.cv_file_name.nil? %> <%= link_to truncate(user.cv_file_name, lenght: 6), user.cv.url, :target => "_blank" %> <%end %>
                </address>
            </div>
            <div class="clearfix"></div>
        <%end%>
        </div>
       
    </div> <% end %>
</div>
</div>

<% content_for :javascript do %>

<script type="text/javascript">

$(function () {

    $('.contact-box').each(function () {
        animationHover(this, 'pulse');
    });

});

</script>

<% end %>

