<div class="row wrapper border-bottom white-bg page-heading">
   <div class="col-lg-10">
      <h2 class="text-dark-blue"><strong>Progreso del producto</strong></h2>
      <ol class="breadcrumb">
         <li>
            <a href="<%= url_for :controller => 'home', :action => 'index' %>">Inicio</a>
         </li>
         <li>
            <a href="/progresses">Listado</a>
         </li>
         <li class="active">
            <% if @progress.new_record? %>
            <strong class="text-blue">Registrar</strong>
            <% else %>
            <strong class="text-blue">Editar</strong>
            <% end %>
         </li>
      </ol>
   </div>
</div>
<div class="wrapper wrapper-content">
   <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-8">
         <div class="ibox float-e-margins">
            <div class="ibox-title">
               <h4 class="text-dark-blue"><strong>Progresos</strong></h4>
            </div>
            <div class="ibox-content">
               <div class="row">
                  <div class="col-sm-12">
                      <%= form_for(progress) do |f| %>
                      <% if progress.errors.any? %>
                        <div id="error_explanation">
                          <h2><%= pluralize(progress.errors.count, "error") %> prohibited this progress from being saved:</h2>
                    
                          <ul>
                          <% progress.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                          </ul>
                        </div>
                      <% end %>
                      <div class="row">
                        <div class="col-md-8">
                        <div class="form-group">
                              <label class="control-label">Título <label for="progress_title" class="control-label error" style="margin-bottom: 0px;"></label></label>
                              <%= f.text_field :title,:required => true, :class => "form-control" %>
                        </div>
                        <div class="form-group">
                              <label class="control-label">Descripción <label for="progress_description" class="control-label error" style="margin-bottom: 0px;"></label></label>
                              <%= f.text_field :description,:required => true, :class => "form-control" %>
                        </div>
                         <div class="form-group">
                              <label class="control-label">Estatus <label for="progress_status" class="control-label error" style="margin-bottom: 0px;"></label></label>
                              <%= f.text_field :status,:required => true, :class => "form-control" %>
                        </div>
                        </div>
                        <div class="col-md-4">
                         <label class="control-label">Progreso <label for="progress_progress" class="control-label error" style="margin-bottom: 0px;"></label></label>
                        <div class="form-group">
                             
                              <input type="text" name="progress[progress]" id="progress_progress" data-fgColor="#00257b" value="0" class="dial" >
                        </div>
                        </div>
                      </div>
                      
                      
                      <div class="field">
                        <%= f.hidden_field :product_id , value: @product %>
                      </div>
                     
                     
                     </br></br>
                     <div class="form-group">
                        <div class="col-lg-offset-3 col-lg-2">
                           <%= f.submit "Guardar", :class => "btn btn-sm btn-primary" %>
                        </div>
                        <% if (@progress.new_record?) %>
                        <div class="col-lg-2">
                           <%= link_to 'Limpiar', '', type: :reset, :class => "btn btn-sm btn-warning " %>                          
                        </div>
                        <% end %>
                        <div class="col-lg-2">
                           <%= link_to 'Atrás', progresses_path, :class => "btn btn-sm btn-default" %>
                        </div>
                     </div>
                     <% end %>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <div class="col-sm-2"></div>
   </div>
</div>



<script>
    $(function() {
        $(".dial").knob();
        
    });
</script>


