<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Detalle del Producto</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'home', :action => 'inicio' %>">Inicio</a>
            </li>
            <li>
                <a href="/products">Categoria</a>
            </li>
            <li class="active">
                <strong>Detalle</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

<div class="row">
    <div class="col-lg-12">

        <div class="ibox product-detail">
            <div class="ibox-content">

                <div class="row">
                    <div class="col-md-5">


                        <div class="product-images">
			 				<div class="carousel slide" id="carousel1" style="height: 300px">
			                    <div class="carousel-inner" style="height: 300px">
			                        <div class="item active" style="height: 300px">
			                            <img style="height: 300px" alt="image" class="img-responsive" src="<%= image_path('p_big3.jpg') %>">
			                        </div>
			                        <div class="item" style="height: 300px">
			                            <img style="height: 300px" alt="image" class="img-responsive" src="<%= image_path('p_big1.jpg') %>">
			                        </div>
			                        <div class="item " style="height: 300px">
			                            <img style="height: 300px" alt="image" class="img-responsive" src="<%= image_path('p_big2.jpg') %>">
			                        </div>

			                    </div>
			                    <a data-slide="prev" href="#carousel1" class="left carousel-control">
			                        <span class="icon-prev"></span>
			                    </a>
			                    <a data-slide="next" href="#carousel1" class="right carousel-control">
			                        <span class="icon-next"></span>
			                    </a>
			                </div>
                        </div>

                    </div>
                    <div class="col-md-7">

                        <h2 class="font-bold m-b-xs">
                            <%= @product.name %>
                        </h2>
                        <div class="m-t-md">
                            <h2 class="product-main-price">25% <small class="text-muted">En desarrollo</small> </h2>
                        </div>
                        <hr>

                        <h4>Descripci√≥n del Producto</h4>

                        <div class="text-primary">
                           <%= @product.description %>
                        </div>
                        <dl>
                            <dt>Etiquetas</dt>
                            <dd>&nbsp</dd>
                            <% @product.tags.each do |tag| %>
                               <span class="label label-primary hvr-fade hvr-grow" ><%= link_to (tag.name), productos_path(:tag => tag.name), :style => "color: white"%></span>&nbsp
                            <% end %>
                        </dl>
                        <hr>

                        <div>
                            <div class="btn-group">
                                <button class="btn btn-primary btn-sm"><i class="fa fa-user"></i> Registrarse</button>
                                <button class="btn btn-white btn-sm"><i class="fa fa-envelope"></i> Contactar </button>
                                <%= social_share_button_tag(@product.name) %>
                            </div>
                        </div>



                    </div>
                </div>
<div class="row m-t-sm">
<div class="col-lg-12">
<div class="panel blank-panel">
<div class="panel-heading">
    <div class="panel-options">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-1" data-toggle="tab">Detalle</a></li>
            <li class=""><a href="#tab-2" data-toggle="tab">Preguntas Frecuentes</a></li>
        </ul>
    </div>
</div>

<div class="panel-body">

<div class="tab-content">
<div class="tab-pane active" id="tab-1">
    <div class="col-md-10 col-md-offset-1">
        <%= @product.detail.html_safe %>
    </div>
</div>
<div class="tab-pane" id="tab-2">
    <div class="col-md-10 col-md-offset-1" style="background">
        <% @product.questions.each do |question| %>
        <div class="faq-item">
                <div class="row">
                    <div class="col col-md-1">
                        <a class="btn btn-circle btn-pregunta" style="margin: 10% 0px;" data-toggle="collapse" href="<%= '#'+question.id.to_s %>"><i class="fa fa-question fa-3x"></i></a>
                    </div>
                    <div class="col col-md-10">
                        <a data-toggle="collapse" href="#<%= question.id.to_s %>" class="faq-question"><%= question.description %></a>
                        
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div id="<%= question.id.to_s %>" class="panel-collapse collapse ">
                            <div class="faq-answer">
                                <p>
                                   <%= question.answer %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
             
    </div>

</div>
</div>
