<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2 class="text-dark-blue"><strong>Categorías</strong></h2>
      <ol class="breadcrumb">
        <li>
          <a href="<%= url_for :controller => 'home', :action => 'index' %>">Inicio</a>
        </li>
        <li class="active">
            <strong class="text-blue">Listado</strong>
        </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
      <div class="col-sm-12">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
              <h4 class="text-dark-blue">
                <strong>Listado: Categorías</strong>
              </h4>
          </div>
          <div class="ibox-content">
            <%= link_to "Registar", new_category_path, :class => "btn btn-primary btn-sm", style: 'position: absolute; z-index: 9999; margin-top: -30px;'%>

  <table class="footable table table-stripped" data-sorting="true" data-filtering="true">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Fronttext</th>
      <th>Icon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= category.fronttext %></td>
        <td><%= category.icon %></td>
        <td><%= link_to 'Editar', edit_category_path(category) , :class => "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Eliminar', category, method: :delete , :class => "btn btn-danger btn-sm", data: { confirm: '¿Está seguro que desea eliminar la categoría?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>
          </div>
        </div>
      </div> 
  </div>
</div>