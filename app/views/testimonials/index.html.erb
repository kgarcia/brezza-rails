<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2 class="text-dark-blue"><strong>Testimonios</strong></h2>
      <ol class="breadcrumb">
        <li>
          <a href="<%= url_for :controller => 'home', :action => 'index' %>">Inicio</a>
        </li>
        <li class="active">
            <strong class="text-blue">Listado</strong>
        </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
      <div class="col-sm-12">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
              <h4 class="text-dark-blue">
                <strong>Listado: Testimonios</strong>
              </h4>
          </div>
          <div class="ibox-content">
            <%= link_to "Registrar", new_testimonial_path, :class => "btn btn-primary btn-sm", style: 'position: absolute; z-index: 9999; margin-top: -30px;'%>

  <table class="footable table table-stripped" data-sorting="true" data-filtering="true">
  <thead>
    <tr>
      <th>Cita</th>
      <th>Autor</th>
      <th>Fecha</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @testimonials.each do |testimonial| %>
      <tr>
        <td><%= testimonial.quote %></td>
        <td><%= testimonial.autor %></td>
        <td><%= testimonial.date %></td>
        <td><%= link_to 'Editar', edit_testimonial_path(testimonial) , :class => "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Eliminar', testimonial, :class => "btn btn-danger btn-sm", method: :delete, data: { confirm: '¿Está seguro que desea eliminar la cita del testimonio?' } %></td>

      </tr>
    <% end %>
  </tbody>
 </table>
          </div>
        </div>
      </div> 
  </div>
</div>