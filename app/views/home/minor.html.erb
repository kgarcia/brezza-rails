<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Project list</h2>
        <ol class="breadcrumb">
            <li>
                <a href="#">Administración</a>
        </li>
        <li class="active">
            <strong>Mis Alianzas</strong>
        </li>
    </ol>
</div>
        </div>
<div class="row">
<div class="col-lg-12">
<div class="wrapper wrapper-content animated fadeInUp">

    <div class="ibox">
        <div class="ibox-title">
            <h5>Todos los productos de los que eres aliado</h5>
            <div class="ibox-tools">
                <a href="/productos" class="btn btn-primary btn-xs">Ver más productos</a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row m-b-sm m-t-sm">
                <div class="col-md-1">
                    <button type="button" id="loading-example-btn" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i> Refresh</button>
                </div>
                <div class="col-md-11">
                    <div class="input-group">
                        <input type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                    </div>
                </div>
            </div>

            <div class="project-list">

                <table class="table table-hover">
                    <tbody>
                    <% @products.each do |product| %>
                    <tr>
                        <td class="project-status">
                            <span class="label label-primary">Active</span>
                        </td>
                        <td class="project-title">
                            <%= link_to product.name, avance_path(product) %> 
                        <br />
                        <small>Creado el <%= product.created_at %></small>
                    </td>
                    <td class="project-completion">
                        <small>Completación: <%= product.progresses.last.progress.to_s %></small>
                        <div class="progress progress-mini">
                            <div style="width: 48%;" class="progress-bar"></div>
                        </div>
                    </td>
                    <td class="project-people">
                        <a href=""><img alt="image" class="img-circle" src="<%= image_path('p3.jpg') %>"></a>
                        <a href=""><img alt="image" class="img-circle" src="<%= image_path('p1.jpg') %>"></a>
                        <a href=""><img alt="image" class="img-circle" src="<%= image_path('p2.jpg') %>"></a>
                        <a href=""><img alt="image" class="img-circle" src="<%= image_path('p4.jpg') %>"></a>
                        <a href=""><img alt="image" class="img-circle" src="<%= image_path('p5.jpg') %>"></a>
                    </td>
                    <td class="project-actions">
                        <%= link_to  avance_path(product), class: "btn btn-white btn-sm" do %> 
                            <i class="fa fa-folder"></i> Ver
                        <% end %>
                        
                    </td>
                    </tr>
                    <% end %>
        </tbody>
        </table>
        </div>
        </div>
        </div>
        </div>
        </div>
        </div>


