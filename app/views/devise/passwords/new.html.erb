<div class="passwordBox animated fadeInDown">
    <div class="row">

        <div class="col-md-12">
            <div class="ibox-content">

                <h2><%= t('.forgot_your_password') %></h2>

                <p>
                    Ingresa tu correo electrónico y tu contraseña será reiniciada vía email
                </p>

                <div class="row">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<%= devise_error_messages! %>
                    <div class="col-lg-12">
                        <form class="m-t" role="form" action="index.html">
                            <div class="form-group">
                                <%= f.email_field :email, autofocus: true, :class=>"form-control", :placeholder=>"Email address"%>
                            </div>
                            <%= f.submit t('.send_me_reset_password_instructions'), :class=>"btn btn-primary block full-width m-b" %>
                            

<% end %>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <%= link_to "Iniciar sesión", new_session_path(resource_name) %><br />
        </div>
        <div class="col-md-6 text-right">
            <%= link_to "Registrarse", new_registration_path(resource_name) %><br />
        </div>
    </div>
</div>